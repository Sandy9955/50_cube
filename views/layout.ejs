<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Custom styles for better accessibility */
        .focus\:ring-2:focus {
            outline: 2px solid transparent;
            outline-offset: 2px;
        }
        
        /* Loading animations */
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .animate-pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        
        /* Flash messages */
        .flash-message {
            animation: slideIn 0.3s ease-out;
        }
        
        @keyframes slideIn {
            from { transform: translateY(-100%); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="text-xl font-bold text-gray-900">50cube</a>
                </div>
                <div class="flex items-center space-x-4">
                    <% if (user) { %>
                        <span class="text-sm text-gray-600">Credits: <strong class="text-blue-600"><%= user.credits.toLocaleString() %></strong></span>
                        <a href="/merch" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Merchandise</a>
                        <% if (user.isAdmin) { %>
                            <a href="/admin/metrics" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Admin</a>
                        <% } %>
                        <form method="POST" action="/logout" class="inline">
                            <button type="submit" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Logout</button>
                        </form>
                    <% } else { %>
                        <a href="/login" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Login</a>
                        <a href="/register" class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="flash-message bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mx-4 mt-4" role="alert">
            <% messages.error.forEach(function(error) { %>
                <p><%= error %></p>
            <% }); %>
        </div>
    <% } %>
    
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash-message bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md mx-4 mt-4" role="alert">
            <% messages.success.forEach(function(success) { %>
                <p><%= success %></p>
            <% }); %>
        </div>
    <% } %>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-gray-600 text-sm">
                    Â© 2024 50cube Platform. Built with Node.js, Express, MongoDB & Tailwind CSS.
                </p>
                <p class="text-gray-500 text-xs mt-2">
                    Tech Stack: Node.js + Express + MongoDB + EJS + Stripe (test mode)
                </p>
            </div>
        </div>
    </footer>

    <script>
        // Auto-hide flash messages after 5 seconds
        setTimeout(() => {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(msg => {
                msg.style.transition = 'opacity 0.5s ease-out';
                msg.style.opacity = '0';
                setTimeout(() => msg.remove(), 500);
            });
        }, 5000);
    </script>
</body>
</html>
