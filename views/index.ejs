<% layout('layout') -%>

<div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">50cube Platform</h1>
        <p class="text-xl text-gray-600 mb-2">Interactive learning platform with gamified systems</p>
        <p class="text-sm text-gray-500">Built with Node.js, Express, MongoDB & Tailwind CSS</p>
    </div>

    <!-- Modules Grid -->
    <div class="grid md:grid-cols-3 gap-6 mb-12">
        <!-- M16 - Merch Redeem -->
        <a href="/merch" class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-gray-200">
            <div class="flex items-center gap-4 mb-4">
                <div class="p-3 rounded-lg bg-blue-100">
                    <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">M16 - Merch Redeem</h3>
                    <p class="text-sm text-gray-600">Credit-based merchandise redemption</p>
                </div>
            </div>
            <p class="text-sm text-gray-500">
                Apply credits to redeem physical merchandise with partial cash payments.
            </p>
        </a>

        <!-- M17 - Admin Metrics -->
        <a href="/admin/metrics" class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-gray-200">
            <div class="flex items-center gap-4 mb-4">
                <div class="p-3 rounded-lg bg-green-100">
                    <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">M17 - Admin Metrics</h3>
                    <p class="text-sm text-gray-600">Platform KPI dashboard</p>
                </div>
            </div>
            <p class="text-sm text-gray-500">
                View platform metrics including bursts, wins, purchases, and more.
            </p>
        </a>

        <!-- M18 - Impact Console -->
        <a href="/admin/lanes" class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 p-6 border border-gray-200">
            <div class="flex items-center gap-4 mb-4">
                <div class="p-3 rounded-lg bg-purple-100">
                    <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">M18 - Impact Console</h3>
                    <p class="text-sm text-gray-600">Content lane management</p>
                </div>
            </div>
            <p class="text-sm text-gray-500">
                Evaluate content lanes and manage their states and impact scores.
            </p>
        </a>
    </div>

    <!-- Tech Stack Info -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Tech Stack</h2>
        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <h3 class="font-semibold text-gray-800 mb-2">Backend</h3>
                <ul class="text-sm text-gray-600 space-y-1">
                    <li>• Node.js + Express.js</li>
                    <li>• MongoDB + Mongoose</li>
                    <li>• EJS templating</li>
                    <li>• Stripe (test mode)</li>
                    <li>• Session-based auth</li>
                </ul>
            </div>
            <div>
                <h3 class="font-semibold text-gray-800 mb-2">Frontend</h3>
                <ul class="text-sm text-gray-600 space-y-1">
                    <li>• Server-side rendering</li>
                    <li>• Tailwind CSS</li>
                    <li>• Chart.js for visualization</li>
                    <li>• Vanilla JavaScript</li>
                    <li>• WCAG AA compliant</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <% if (!user) { %>
    <div class="text-center mt-8">
        <p class="text-gray-600 mb-4">Get started with your learning journey</p>
        <div class="space-x-4">
            <a href="/register" class="bg-blue-600 text-white hover:bg-blue-700 px-6 py-3 rounded-md font-medium">Create Account</a>
            <a href="/login" class="bg-gray-200 text-gray-800 hover:bg-gray-300 px-6 py-3 rounded-md font-medium">Sign In</a>
        </div>
    </div>
    <% } %>
</div>
